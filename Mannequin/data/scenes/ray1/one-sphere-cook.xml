<?xml version="1.0" encoding="UTF-8" ?>
<!--  Test scene with a single sphere, Cook-Torrance style
 -->
<scene>
  <exposure>3.3</exposure>
  <camera type="PerspectiveCamera">
    <viewPoint>5 4 3</viewPoint>
    <viewDir>-5 -4 -3</viewDir>
    <viewUp>0 1 0</viewUp>
    <projDistance>5</projDistance>
    <viewWidth>2.5</viewWidth>
    <viewHeight>2.5</viewHeight>
  </camera>
  <image>
    300 300
  </image>
  <shader name="brown" type="SubsurfaceCookTorrance">
    <diffuseColor>.64 .16 .16</diffuseColor>
    <specularColor>1 1 0</specularColor>
    <roughness>0.4</roughness>
    <fiberDirection>1 0 0</fiberDirection>
  </shader>
  <surface type="Sphere">
    <shader ref="brown" />
    <!--shader type="ShowNormal"/-->
    <center>0 0 0</center>
    <radius>1</radius>
  </surface>
  <light>
    <position>3 4 5</position>
    <intensity>11 11 11</intensity>
  </light>
</scene>
